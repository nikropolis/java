package lesson3;

public class ListArray {
	int length;
	int [] arr;
	
	public ListArray(){
		length = 0;
	}
	
	public void add(int a){
		if(length == 0){
			arr = new int[1];
		} else {
			int [] tmp = new int [length];
			for(int i = 0 ; i < length; i++){
				tmp[i] = arr[i];
			}
			arr = new int [length+1];
			for(int i = 0 ; i < length; i++){
				arr[i] = tmp[i];
			}
		}
		
		arr[ length ] = a;
		length++;
		
	}

}
